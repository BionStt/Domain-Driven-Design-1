@model DMS.Books.Services.Messaging.GetAllBookResponse

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookDetails.FirstOrDefault().BookNameBengali)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDetails.FirstOrDefault().BookNameEnglish)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDetails.FirstOrDefault().CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDetails.FirstOrDefault().CategoryNameBengali)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDetails.FirstOrDefault().CategoryNameEnglish)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDetails.FirstOrDefault().Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.BookDetails)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookNameBengali)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookNameEnglish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryNameBengali)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryNameEnglish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>





